<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pax_log"
            android:layout_width="386dp"
            android:layout_height="80dp"
            android:foregroundGravity="right"
            android:src="@drawable/pax_logo_1" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_main"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/blank"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="WELCOME TO PAX GAS STATION"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/title_desc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/title_main"
        android:gravity="center"
        android:text="Please Choose Payment Type"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_desc"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="150dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/credit_confirm"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/tv_order_corners"
            android:text="Credit"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/debit_confirm"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/tv_order_corners"
            android:text="Debit"
            android:textSize="32sp" />
    </LinearLayout>

</RelativeLayout>