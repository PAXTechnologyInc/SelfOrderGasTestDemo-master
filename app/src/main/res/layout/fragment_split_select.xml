<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/space_size_normal_large"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/split_tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparency"
            android:gravity="left|center_vertical"
            android:textColor="@color/primary_black_color"
            android:text="@string/split_tip"
            android:textSize="@dimen/font_size_smallest"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSplit2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_split_height"
        android:background="@drawable/layout_split_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/img_split_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/space_size_large"
            android:src="@drawable/icon_two_ways"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/split_way_background"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/layout_split_way_width"
                android:layout_height="@dimen/layout_split_way_height"
                android:background="@drawable/split_way_text_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparency"
                    android:gravity="center"
                    android:text="@string/split_evenly_tip"
                    android:textSize="@dimen/font_size_smaller"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparency"
                    android:gravity="center"
                    android:text="@string/split2_tip"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_normal"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSplit3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_split_height"
        android:layout_marginTop="@dimen/space_size_larger"
        android:background="@drawable/layout_split_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/img_split_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/space_size_large"
            android:src="@drawable/icon_three_ways"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/split_way_background"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/layout_split_way_width"
                android:layout_height="@dimen/layout_split_way_height"
                android:background="@drawable/split_way_text_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparency"
                    android:gravity="center"
                    android:text="@string/split_evenly_tip"
                    android:textSize="@dimen/font_size_smaller"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparency"
                    android:gravity="center"
                    android:text="@string/split3_tip"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_normal"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSplitItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_split_height"
        android:layout_marginTop="@dimen/space_size_larger"
        android:background="@drawable/layout_split_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/img_split_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/space_size_large"
            android:src="@drawable/icon_by_item"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/split_way_background"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/layout_split_way_width"
                android:layout_height="@dimen/layout_split_way_height"
                android:background="@drawable/split_way_text_bg"
                android:gravity="center"
                android:text="@string/split_item_tip"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_normal"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>