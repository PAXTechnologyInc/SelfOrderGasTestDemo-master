<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_header1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_height_larger"
    android:layout_alignParentTop="true"
    android:background="@drawable/layout_header_shape">

    <ImageView
        android:id="@+id/menu_header_logo"
        android:layout_width="112dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/pax_logo_1" />

    <ImageView
        android:id="@+id/menu_header_setting"
        android:layout_width="@dimen/space_height_larger"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/space_size_smaller"
        android:src="@mipmap/icon_settings" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_header_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="Fueling"
            android:textColor="@color/primary_black_color"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/loading"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/loading" />
    </LinearLayout>

</RelativeLayout>