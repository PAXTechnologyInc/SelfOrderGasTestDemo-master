<resources>
 
    <declare-styleable name="MyEditText">
        <attr name="enableAlpha" format="boolean" />
        <attr name="keyboardType">
            <enum name="A920_SIMPLE" value="0"/>
            <enum name="A920_COLOR" value="1"/>
            <enum name="A920_COLOR_SWIP" value="2"/>
            <enum name="D800_PIN" value="3"/>
            <enum name="D800_SWIP" value="4"/>
            <enum name="D800_BLANK" value="5"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="Keyboard">
        <attr name="xml" format="reference" />
        <attr name="random_keys" format="reference|boolean" />
    </declare-styleable>

    <declare-styleable name="MyDialogPreference">
        <attr name="maxLength" format="integer" />
        <attr name="maxLines" format="integer" />
        <attr name="singLine" format="boolean" />
        <attr name="defaultValue" format="string|boolean|integer|reference|float" />
        <attr name="digitsValue" format="string" />
        <attr name="ems" format="integer" min="0" />
        <attr name="minEms" format="integer" min="0" />
        <attr name="maxEms" format="integer" min="0" />
        <attr name="inputType" />
        <attr name="selectAllOnFocus" format="boolean" />
        <attr name="hint" format="string" />
    </declare-styleable>

</resources>